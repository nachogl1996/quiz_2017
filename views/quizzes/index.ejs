
<h1>
    Preguntas:
</h1>

<table>
    <% for (var i in quiz) { %>
    <% var quizzes = quiz[i]; %>
    <tr>
        <td>
            <a href="/quizzes/<%= quizzes.id %>/play"><%= quizzes.question %></a>
        </td>
        <td>
            <a href="/quizzes/<%= quizzes.id %>"><button>ver</button></a>
        </td>
        <td>
            <a href="/quizzes/<%= quizzes.id %>/edit"><button>editar</button></a>
        </td>
        <td>
            <a href="/quizzes/<%= quizzes.id %>?_method=DELETE"
               onClick="return confirm('Borrar: <%= quizzes.question %>');">
                <button>borrar</button>
            </a>
        </td>
    </tr>
    <% } %>
</table>

<a href="/quizzes/new"><button type="button">Crear pregunta</button></a>